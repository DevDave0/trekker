<h1> New User </h1>

<% if @user.errors %>
    <ul>
        <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @user do |f| %>
    <%= f.label 'Enter your username:' %>
    <%= f.text_field :name %>
    <%= f.label :password, "Password" %>
    <%= f.password_field :password %>
    <%= f.submit %>
<% end %>