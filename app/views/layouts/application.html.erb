<!DOCTYPE html>
<html>
  <head>
    <title>Trekker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css"> 
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% unless controller_name == "sessions" && action_name == "login" %>

      <% if session["user"] %>
        <div>Welcome <%= current_user.name %></div>
        <div><%= link_to "Profile", user_path(current_user.id) %></div>
        <div><%= link_to "Homepage", homepage_path %></div>
        <div><%= link_to "Trails", trails_path %></div>
        <%= link_to "Log out", logout_path %>

      <% else %>
        <%= link_to "Log in", login_path %>

      <% end %> 

    <% end %>

    <%= yield %>
  </body>

</html>
