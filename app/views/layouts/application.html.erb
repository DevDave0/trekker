<!DOCTYPE html>
<html>
  <head>
    <title>Trekker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css"> 
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class='navbar is-dark'>
          <div class='navbar-menu'>
            <div><%= link_to "Homepage", homepage_path, class: 'navbar-item' %></div>
            <div><%= link_to "Trails", trails_path, class: 'navbar-item' %></div>
          </div>

      <% unless controller_name == "sessions" && action_name == "login" %>


        <% if session["user"] %>
          
            <div><%= link_to "Profile", user_path(current_user.id), class: 'navbar-item' %></div>
            <div><%= link_to "Log out", logout_path, class: 'navbar-item' %></div>

        <% else %>
          <div class='log-in-button'>
          <%= link_to "Log in", login_path %>
          </div>
          

        <% end %> 

      <% end %>

    </nav>

    <section id="bg">
      <div class='container' id='main_container'>
      <%= yield %>
      </div>
    </section>
  </body>

</html>
