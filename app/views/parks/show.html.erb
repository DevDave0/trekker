
<div class='login'>
<h1 class='title is-2'><%= @park.name %></h1>

<p>Park Information:</p>
<div><%= @park.park_info %></div>

<br>

<p>Waterfalls? <%= @park.has_waterfalls? %></p>

<br>

<p>List of trails:</p> 
<ul>
    <% @park.trails.each do |trail| %>
        <li><%= link_to trail.name, trail_path(trail.id) %></li>
    <% end %>
</ul>
</div>